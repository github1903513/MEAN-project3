<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <%- include('../partials/head') %>
  </head>

  <body>
    <div class="pure-menu pure-menu-horizontal pure-menu-scrollable">
      <ul class="pure-menu-list">
        <li class="pure-menu-item">
          <a href="/" class="pure-menu-link">HOMEPAGE</a>
        </li>
        <li class="pure-menu-item">
          <a href="/api/getall" class="pure-menu-link">BOOKLIST</a>
        </li>
        <li class="pure-menu-item">
          <a href="/api/add" class="pure-menu-link">ADD BOOK</a>
        </li>
      </ul>
    </div>
    <br />
    <br />

    <div id="wrapper">
      <!--menu
      <%- include('../partials/menu') %>-->
      <h1>Lukudiplomi Book List:</h1>
      <!--contant-->
      <div>
        <form
          class="pure-form"
          class="pure-u-1-2"
          method="post"
          action="/api/update"
        >
          <legend>Edit the book's infomation</legend>
          <fieldset class="pure-group">
            Bookname:<input
              type="text"
              class="pure-input-1-2"
              value="<%= taulu.bookname %>"
              id="bookname"
              name="bookname"
              required
            />
            Author:<input
              type="text"
              class="pure-input-1-2"
              value="<%= taulu.author %>"
              id="author"
              name="author"
              required
            />
            Booktype:<input
              type="text"
              class="pure-input-1-2"
              value="<%= taulu.type %>"
              id="type"
              name="type"
              required
            />
            Picture:<input
              type="text"
              class="pure-input-1-2"
              value="<%= taulu.picture %>"
              id="picture"
              name="picture"
              required
            />
            Content:<input
              type="text"
              class="pure-input-1-2"
              value=""
              id="content"
              name="content"
            />
          </fieldset>

          <button
            type="submit"
            class="pure-button pure-input-1-2 pure-button-primary"
          >
            UPDATE
          </button>
        </form>
      </div>
      <br />
      <br />
    </div>

    <!--footer
    <%- include('../partials/footer') %>-->
  </body>
</html>
